<Page
    x:Class="ReactionTimer.ReactionWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ReactionTimer"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Name="ReactionBackground" Background="GreenYellow" IsTapEnabled="True" Tapped="background_Tapped">

       

       <Button FontFamily="Segoe MDL2 Assets" Grid.Column="0"
               Content="&#xE0C4;" Name="BackButton" HorizontalAlignment="Left" 
               VerticalAlignment="Top" FontSize="36" Click="BackButton_Click" RelativePanel.AlignLeftWithPanel="True"/>



       <TextBlock Name="myText" HorizontalAlignment="Center" 
                  VerticalAlignment="Center" TextWrapping="Wrap" 
                  FontSize="30" TextAlignment="Center" 
                  Text="Once the background turns RED tap the screen."/>

           
   




    </Grid>
</Page>
