<Page
    x:Class="ReactionTimer.ResultWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ReactionTimer"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="GreenYellow">

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center"> 
            <TextBlock Text="Your reaction time was : "                   
                   TextWrapping="Wrap" Name="Result"
                   FontSize="25"
                   TextAlignment="Center" Margin="10"
                   VerticalAlignment="Bottom"/>

            <Button FontFamily="Segoe MDL2 Assets" 
                FontSize="36" Content="&#xE895;" 
                HorizontalAlignment="Center"  
                BorderBrush="Black" Click="Button_Click"/>
        </StackPanel>
        
        
    </Grid>
</Page>
